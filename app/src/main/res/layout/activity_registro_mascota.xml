<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Nombre -->
        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la mascota"
            android:padding="12dp" />

        <!-- Edad -->
        <EditText
            android:id="@+id/etEdad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edad"
            android:inputType="number"
            android:padding="12dp" />

        <!-- Raza -->
        <EditText
            android:id="@+id/etRaza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Raza"
            android:padding="12dp" />

        <!-- Sexo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sexo" />
        <RadioGroup
            android:id="@+id/rgSexo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rbMacho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Macho" />
            <RadioButton
                android:id="@+id/rbHembra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hembra" />
        </RadioGroup>

        <!-- ¿Vacunado? -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Está vacunado?" />
        <RadioGroup
            android:id="@+id/rgVacunado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rbSi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sí" />
            <RadioButton
                android:id="@+id/rbNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No" />
        </RadioGroup>

        <!-- Tipo de vacunación -->
        <EditText
            android:id="@+id/etTipoVacunacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo de vacunación"
            android:visibility="gone" />

        <!-- Fecha de vacunación -->
        <EditText
            android:id="@+id/etFechaVacunacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de vacunación"
            android:visibility="gone" />

        <!-- ¿Esterilizado? -->
        <CheckBox
            android:id="@+id/cbEsterilizado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Está esterilizado?" />

        <!-- Subir imagen (solo visual, no se guarda) -->
        <Button
            android:id="@+id/btnSubirImagen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subir Imagen" />

        <ImageView
            android:id="@+id/imageViewMascota"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <!-- Botón Registrar -->
        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar Mascota" />

    </LinearLayout>
</ScrollView>